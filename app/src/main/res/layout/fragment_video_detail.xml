<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootVideoFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/videoToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#66000000"
        android:elevation="2dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/videoToolbarBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:id="@+id/videoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <ImageView
        android:id="@+id/clickToPlayImageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:elevation="2dp"
        android:src="@drawable/ic_play_circle_filled_white" />

    <ImageView
        android:id="@+id/placeHolderImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp" />


    <VideoView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/rootOfVideoDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="?android:attr/actionBarSize"
        android:background="#66000000"
        android:elevation="3dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/videoTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text=" "
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/videoTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text=" "
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/videoTextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text=" "
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/videoTextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text=" "
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/bottomVideoBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="#66000000"
        android:elevation="2dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/videoBackBottomBarArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_simple_left_arrow" />

            <ImageView
                android:id="@+id/shareIconVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_share" />

            <ImageView
                android:id="@+id/deleteIconVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_delete" />

            <ImageView
                android:id="@+id/descriptionIconVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_description" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>


</FrameLayout>